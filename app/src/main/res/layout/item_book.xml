<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/container_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />
    <ImageView
        android:id="@+id/book_1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/book_1"
        app:layout_editor_absoluteY="40dp"
        app:layout_editor_absoluteX="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="an American Marriage"
        android:textSize="20sp"
        android:textColor="#f00"
        app:layout_constraintStart_toEndOf="@+id/book_1"
        app:layout_constraintTop_toTopOf="@id/imageView"
        />
    <TextView
        android:id="@+id/item_book_author"
        android:textColor="#f0f0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="by VanHau"
        app:layout_constraintStart_toEndOf="@id/book_1"
        app:layout_constraintTop_toBottomOf="@id/text_1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/rating_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/book_1"
        app:layout_constraintTop_toBottomOf="@id/item_book_author"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/item_book_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/rating_1"
        app:layout_constraintTop_toTopOf="@id/rating_1"
        app:layout_constraintBottom_toBottomOf="@id/rating_1"
        android:layout_marginStart="8dp" />
    <TextView
        android:id="@+id/item_book_pages"
        android:textColor="#f0f"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="255 pages | 23 reviews"
        app:layout_constraintStart_toEndOf="@id/book_1"
        app:layout_constraintTop_toBottomOf="@id/rating_1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/favoris"
        android:tint="#FFEB3B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        android:src="@drawable/ic_favorite_black_24dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>